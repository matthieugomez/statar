#
  } else {#
    N <- nrow(M)#
    f=function(x){#
      if (!is.null(w)){#
        m <- Hmisc::wtd.mean(x, na.rm = na.rm, w = w)#
        sum_higher <- matrixStats::colWeightedMeans(cbind((x-m)^2,(x-m)^3,(x-m)^4), na.rm=na.rm, w = w)#
        sum_higher[1] <- sqrt(sum_higher[1])#
