        sum_higher[3] <- sum_higher[3]/sum_higher[1]^4#
        sum_quantile=Hmisc::wtd.quantile(x, c(0,0.01,0.05,0.1,0.25,0.50,0.75,0.9,0.95,0.99,1), na.rm=na.rm, weights = w)#
      } else{#
