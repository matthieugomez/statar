#' @export#
sum_up <- function(x, ...,  d = FALSE, w = NULL, na.rm = TRUE, by = NULL, graph = FALSE, minimal = TRUE) {#
  sum_up_(x, .dots = lazy_dots(...) , d = d, w = substitute(w), na.rm = na.rm, by = substitute(by), graph = graph, minimal = minimal)#
