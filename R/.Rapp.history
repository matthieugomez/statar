#' @examples#
#' N <- 100; K <- 10#
#' DT <- data.table(#
#'   id = 1:N,#
#'   v1 = sample(5, N, TRUE),#
#'   v2 = sample(1e6, N, TRUE)#
#' )#
#' sum_up(DT)#
#' sum_up(DT, v2, d = T)#
#' sum_up(DT, starts_with("v"), by = v1)#
#' @export#
sum_up <- function(x, ...,  d = FALSE, w = NULL, na.rm = TRUE, by = NULL, graph = FALSE) {#
  sum_up_(x, .dots = lazy_dots(...) , d = d, w = substitute(w), na.rm = na.rm, by = substitute(by), graph = graph)#
}#
